                    xmlns:local="clr-namespace:MP3Assistant.Views.Styles">

    <Style x:Key="GridViewColumnHeaderStyle" TargetType="{x:Type GridViewColumnHeader}">
        <Setter Property="Background" Value="{StaticResource BackgroundGrayLightBrush}"/>

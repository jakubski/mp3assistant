<Page x:Class="MP3Assistant.BaseDirectoryViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MP3Assistant"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Page.Resources>
        <local:ApplicationPageToPageConverter x:Key="ApplicationPageToPageConverter" />
    </Page.Resources>

    <Grid Background="SlateGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Frame Grid.Column="0"
               Content="{Binding DirectoryFrameContent, Converter={StaticResource ApplicationPageToPageConverter}}">

        </Frame>
        
        <Frame Grid.Column="1"
               Content="{Binding MainFrameContent, Converter={StaticResource ApplicationPageToPageConverter}}">
                
        </Frame>

    </Grid>
</Page>

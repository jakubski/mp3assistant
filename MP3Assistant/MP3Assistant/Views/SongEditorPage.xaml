<Page x:Class="MP3Assistant.SongEditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MP3Assistant"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="SongEditorPage">

    <Grid Margin="10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Tytuł"
                       HorizontalAlignment="Right"/>

            <TextBox Grid.Column="1"
                     Text="{Binding SelectedDirectoryItem.Title}"
                     Margin="6,1,0,1"
                     HorizontalAlignment="Stretch"/>
        </Grid>

        <!-- Performer -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       HorizontalAlignment="Right"
                       Text="Wykonawca"/>

            <TextBox Grid.Column="1"
                     Text="{Binding SelectedDirectoryItem.Performers, Converter={StaticResource MultipleArtistsConverter}}"
                     Margin="6,1,0,1"
                     HorizontalAlignment="Stretch"/>

        </Grid>

        <!-- Album performer -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       HorizontalAlignment="Right"
                       Text="Wykonawca albumu"/>

            <TextBox Grid.Column="1"
                     Text="{Binding SelectedDirectoryItem.AlbumPerformers, Converter={StaticResource MultipleArtistsConverter}}"
                     Margin="6,1,0,1"
                     HorizontalAlignment="Stretch"/>
        </Grid>

        <!-- Album -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       HorizontalAlignment="Right"
                       Text="Album"/>

            <TextBox Grid.Column="1"
                     Text="{Binding SelectedDirectoryItem.Album}"
                     Margin="6,1,0,1"
                     HorizontalAlignment="Stretch"/>
        </Grid>

        <!-- Year, track number, track count -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="160"/>
            </Grid.ColumnDefinitions>

            <!-- Year -->
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           HorizontalAlignment="Right"
                           Text="Rok"/>

                <TextBox Grid.Column="1"
                         Text="{Binding SelectedDirectoryItem.Year}"
                         Margin="6,1,0,1"
                         HorizontalAlignment="Stretch"/>
            </Grid>

            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>

                <!-- Track number -->
                <TextBlock Grid.Column="0"
                           Margin="0,0,6,0"
                           HorizontalAlignment="Right"
                           Text="Nr ścieżki"/>

                <TextBox Grid.Column="1"
                         Text="{Binding SelectedDirectoryItem.TrackIndex}"
                         Margin="0,1,0,1"
                         HorizontalAlignment="Stretch"/>

                <!-- Track count -->
                <TextBlock Grid.Column="2"
                           HorizontalAlignment="Stretch"
                           Text="/"/>

                <TextBox Grid.Column="3"
                         Text="{Binding SelectedDirectoryItem.TrackCount}"
                         Margin="0,1,0,1"
                         HorizontalAlignment="Stretch"/>
            </Grid>
        </Grid>

        <!-- Genre -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       HorizontalAlignment="Right"
                       Text="Gatunek"/>

            <TextBox Grid.Column="1"
                     Text="{Binding SelectedDirectoryItem.Genres, Converter={StaticResource MultipleArtistsConverter}}"
                     Margin="6,1,0,1"
                     HorizontalAlignment="Stretch"/>
        </Grid>
    </Grid>
</Page>

<Page x:Class="MP3Assistant.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MP3Assistant"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Frame Grid.Row="0"
               Name="NavigationBarFrame" 
               Content="{Binding NavigationBarPage, 
                                 Converter={StaticResource PageConverter}}"/>

        <Frame Grid.Row="1"
               Name="FileExplorerFrame" 
               Content="{Binding FileExplorerPage, 
                                 Converter={StaticResource PageConverter}}"/>
    </Grid>
</Page>
